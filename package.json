{
  "name": "refuse-protocol",
  "version": "1.0.0",
  "description": "REFUSE Protocol - Universal Platform for Waste Management Data Exchange",
  "main": "protocol/implementations/index.ts",
  "types": "protocol/specifications/index.ts",
  "scripts": {
    "build": "cd frontend && npm ci && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:protocol-docs": "cd frontend && npm run build:protocol-docs",
    "install:frontend": "cd frontend && npm ci",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint protocol/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint protocol/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write protocol/**/*.ts tests/**/*.ts",
    "validate": "npm run lint && npm run test",
    "docs": "typedoc --out docs protocol/specifications/",
    "start": "node protocol/implementations/index.js"
  },
  "keywords": [
    "waste-management",
    "protocol",
    "data-exchange",
    "api",
    "schema",
    "environmental",
    "compliance",
    "recycling",
    "fleet-management"
  ],
  "author": "REFUSE Protocol Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/refuse-protocol/refuse-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/refuse-protocol/refuse-protocol/issues"
  },
  "homepage": "https://refuse-protocol.org",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "fast-json-patch": "^3.1.1",
    "figlet": "^1.0.0",
    "inquirer": "^9.0.0",
    "json-schema-to-typescript": "^13.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.0"
  },
  "files": [
    "protocol/",
    "tests/",
    "examples/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}

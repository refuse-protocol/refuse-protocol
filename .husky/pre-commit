#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running REFUSE Protocol validation checks..."

# Run linting
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues before committing."
  exit 1
fi

# Run tests
npm run test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please ensure all tests pass before committing."
  exit 1
fi

# Validate JSON schemas
echo "ğŸ” Validating JSON schemas..."
npx ajv validate -s protocol/schemas/*.json -d "protocol/**/*.ts" --valid
if [ $? -ne 0 ]; then
  echo "âŒ Schema validation failed. Please check schema compliance."
  exit 1
fi

echo "âœ… All validation checks passed!"

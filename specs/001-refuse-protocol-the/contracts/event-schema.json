{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://refuse-protocol.org/schemas/event.json",
  "title": "REFUSE Protocol - Event Entity",
  "description": "Standardized event data structure for real-time waste management operations",
  "type": "object",
  "version": "1.0.0",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "entityType": {
      "type": "string",
      "enum": ["customer", "service", "invoice", "route", "container"],
      "description": "Type of entity this event relates to"
    },
    "entityId": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the affected entity"
    },
    "eventType": {
      "type": "string",
      "enum": ["created", "updated", "completed", "cancelled", "scheduled", "rescheduled"],
      "description": "Type of event that occurred"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the event occurred"
    },
    "previousValues": {
      "type": "object",
      "additionalProperties": true,
      "description": "Previous state for change tracking"
    },
    "newValues": {
      "type": "object",
      "additionalProperties": true,
      "description": "New state after the change"
    },
    "sourceSystem": {
      "type": "string",
      "description": "System that generated the event"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid",
      "description": "For tracking related events"
    },
    "userId": {
      "type": "string",
      "format": "uuid",
      "description": "User who triggered the event"
    },
    "eventData": {
      "$ref": "#/$defs/EventData",
      "description": "Event-specific data payload"
    },
    "processed": {
      "type": "boolean",
      "default": false,
      "description": "Whether event has been processed"
    },
    "processedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When event was processed"
    },
    "processingErrors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Any processing errors"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Extensible metadata for system-specific fields"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Record creation timestamp"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Optimistic concurrency control version"
    }
  },
  "required": ["id", "entityType", "entityId", "eventType", "timestamp", "sourceSystem", "createdAt", "version"],
  "additionalProperties": false,
  "$defs": {
    "EventData": {
      "type": "object",
      "properties": {
        "serviceCompleted": {
          "$ref": "#/$defs/ServiceCompletedData",
          "description": "Service completion event data"
        },
        "customerOnboarded": {
          "$ref": "#/$defs/CustomerOnboardedData",
          "description": "Customer onboarding event data"
        },
        "paymentReceived": {
          "$ref": "#/$defs/PaymentReceivedData",
          "description": "Payment received event data"
        },
        "routeOptimized": {
          "$ref": "#/$defs/RouteOptimizedData",
          "description": "Route optimization event data"
        },
        "complianceViolation": {
          "$ref": "#/$defs/ComplianceViolationData",
          "description": "Regulatory compliance violation data"
        }
      },
      "additionalProperties": false
    },
    "ServiceCompletedData": {
      "type": "object",
      "properties": {
        "driverId": {"type": "string", "format": "uuid"},
        "vehicleId": {"type": "string"},
        "weight": {"type": "number", "minimum": 0, "description": "Weight in pounds"},
        "volume": {"type": "number", "minimum": 0, "description": "Volume in cubic yards"},
        "exceptions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Any service exceptions or issues"
        },
        "photos": {
          "type": "array",
          "items": {"type": "string", "format": "uri"},
          "description": "Photo URLs from service completion"
        }
      },
      "required": ["driverId"],
      "additionalProperties": false
    },
    "CustomerOnboardedData": {
      "type": "object",
      "properties": {
        "salesRepId": {"type": "string", "format": "uuid"},
        "contractValue": {"type": "number", "minimum": 0},
        "contractTerm": {"type": "integer", "minimum": 1, "description": "Contract term in months"}
      },
      "required": ["salesRepId", "contractValue"],
      "additionalProperties": false
    },
    "PaymentReceivedData": {
      "type": "object",
      "properties": {
        "amount": {"type": "number", "minimum": 0},
        "paymentMethod": {
          "type": "string",
          "enum": ["cash", "check", "credit_card", "ach", "wire"]
        },
        "referenceNumber": {"type": "string"}
      },
      "required": ["amount", "paymentMethod"],
      "additionalProperties": false
    },
    "RouteOptimizedData": {
      "type": "object",
      "properties": {
        "originalStops": {"type": "integer", "minimum": 1},
        "optimizedStops": {"type": "integer", "minimum": 1},
        "timeSaved": {"type": "integer", "minimum": 0, "description": "Time saved in minutes"}
      },
      "required": ["originalStops", "optimizedStops"],
      "additionalProperties": false
    },
    "ComplianceViolationData": {
      "type": "object",
      "properties": {
        "violationType": {"type": "string"},
        "severity": {
          "type": "string",
          "enum": ["minor", "major", "critical"]
        },
        "correctiveAction": {"type": "string"}
      },
      "required": ["violationType", "severity"],
      "additionalProperties": false
    }
  }
}
